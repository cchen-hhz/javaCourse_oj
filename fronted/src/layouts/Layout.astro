---
import '../styles/global.css';
import 'element-plus/dist/index.css';
import NavBar from '../components/common/NavBar.vue';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Online Judge</title>
	</head>
	<body class="bg-gray-50 min-h-screen flex flex-col">
        <header class="bg-white shadow-sm">
            <nav class="container mx-auto px-4 py-3 flex justify-between items-center">
                <a href="/" class="text-xl font-bold text-blue-600">Online Judge</a>
                <div class="space-x-4">
                    <a href="/problems" class="text-gray-600 hover:text-blue-600">题目列表</a>
                    <a href="/submissions" class="text-gray-600 hover:text-blue-600">提交记录</a>
                    <a href="/users" class="text-gray-600 hover:text-blue-600">用户列表</a>
                </div>
                <NavBar client:only="vue" />
            </nav>
        </header>

		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>

        <footer class="bg-gray-800 text-white py-6 mt-auto">
            <div class="container mx-auto px-4 text-center">
                <p>&copy; 2025 Online Judge System. All rights reserved.</p>
            </div>
        </footer>
	</body>
</html>
